#!/bin/bash

# Array of usernames
usernames=("sani" "aristide" "ams" "Jayden")

# Create users
for username in "${usernames[@]}"
do
    sudo useradd -m "$username"  # -m flag creates the home directory
    echo "User $username created"
done

# Assign users to the "dev" group
for username in "${usernames[@]}"
do
    sudo usermod -aG dev "$username"
    echo "User $username added to the dev group"
done

